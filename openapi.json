{
    "swagger": "2.0",
    "basePath": "/",
    "paths": {
        "/auth/login": {
            "post": {
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/Token"
                        }
                    }
                },
                "summary": "Login and get JWT token",
                "operationId": "login",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/Login"
                        }
                    },
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "tags": [
                    "auth"
                ]
            }
        },
        "/books/": {
            "post": {
                "responses": {
                    "201": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/Book"
                        }
                    }
                },
                "summary": "Create a new book (admin only)",
                "operationId": "create_book",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/BookInput"
                        }
                    },
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "books"
                ]
            },
            "get": {
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                },
                "summary": "List all books (requires authentication) - Cached for 5 minutes",
                "operationId": "list_books",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "books"
                ]
            }
        },
        "/books/{id}": {
            "parameters": [
                {
                    "in": "path",
                    "description": "The book identifier",
                    "name": "id",
                    "required": true,
                    "type": "integer"
                }
            ],
            "put": {
                "responses": {
                    "404": {
                        "description": "Book not found"
                    },
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/Book"
                        }
                    }
                },
                "summary": "Update a book (admin only)",
                "operationId": "update_book",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/BookInput"
                        }
                    },
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "books"
                ]
            },
            "delete": {
                "responses": {
                    "404": {
                        "description": "Book not found"
                    },
                    "204": {
                        "description": "Book deleted"
                    }
                },
                "summary": "Delete a book (admin only)",
                "operationId": "delete_book",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "books"
                ]
            },
            "get": {
                "responses": {
                    "404": {
                        "description": "Book not found"
                    }
                },
                "summary": "Get a book by ID (requires authentication) - Cached for 5 minutes",
                "operationId": "get_book",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "books"
                ]
            }
        },
        "/books/{id}/status": {
            "parameters": [
                {
                    "in": "path",
                    "description": "The book identifier",
                    "name": "id",
                    "required": true,
                    "type": "integer"
                }
            ],
            "patch": {
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/Book"
                        }
                    }
                },
                "summary": "Update book status (admin only)",
                "operationId": "update_book_status",
                "parameters": [
                    {
                        "name": "payload",
                        "required": true,
                        "in": "body",
                        "schema": {
                            "$ref": "#/definitions/StatusUpdate"
                        }
                    },
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "tags": [
                    "books"
                ]
            }
        }
    },
    "info": {
        "title": "Library API",
        "version": "1.0",
        "description": "A simple Library Management API for book CRUD operations with JWT authentication"
    },
    "produces": [
        "application/json"
    ],
    "consumes": [
        "application/json"
    ],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "in": "header",
            "name": "Authorization",
            "description": "Type in the *'Value'* input box: **'Bearer &lt;JWT&gt;'**, where JWT is the token"
        }
    },
    "tags": [
        {
            "name": "books",
            "description": "Book operations"
        },
        {
            "name": "auth",
            "description": "Authentication operations"
        }
    ],
    "definitions": {
        "BookInput": {
            "required": [
                "name",
                "status"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Book name"
                },
                "status": {
                    "type": "string",
                    "description": "Book status (available/borrowed)"
                }
            },
            "type": "object"
        },
        "Book": {
            "required": [
                "name",
                "status"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "Book ID",
                    "readOnly": true
                },
                "name": {
                    "type": "string",
                    "description": "Book name"
                },
                "status": {
                    "type": "string",
                    "description": "Book status (available/borrowed)"
                }
            },
            "type": "object"
        },
        "StatusUpdate": {
            "required": [
                "status"
            ],
            "properties": {
                "status": {
                    "type": "string",
                    "description": "New status (available/borrowed)"
                }
            },
            "type": "object"
        },
        "Login": {
            "required": [
                "password",
                "username"
            ],
            "properties": {
                "username": {
                    "type": "string",
                    "description": "Username"
                },
                "password": {
                    "type": "string",
                    "description": "Password"
                }
            },
            "type": "object"
        },
        "Token": {
            "properties": {
                "token": {
                    "type": "string",
                    "description": "JWT access token"
                },
                "role": {
                    "type": "string",
                    "description": "User role"
                }
            },
            "type": "object"
        }
    },
    "responses": {
        "ParseError": {
            "description": "When a mask can't be parsed"
        },
        "MaskError": {
            "description": "When any error occurs on mask"
        }
    }
}
